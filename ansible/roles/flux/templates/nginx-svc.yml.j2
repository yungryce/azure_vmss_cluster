# roles/flux/templates/nginx-svc.yml.j2
apiVersion: v1
kind: Service
metadata:
  name: nginx-service
  namespace: {{ environment.namespace | default('default') }}  # Dynamic namespace
  labels:
    env: {{ environment.labels.env }}
spec:
  selector:
    app: nginx
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80